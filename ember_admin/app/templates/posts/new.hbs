<form id="post-edit-form" {{action "create" on="submit"}}>
  <div class="post-meta">
    <label>Published: </label>
    {{input type="checkbox" name="published" checked=model.published}}
    <label>URL: </label>
    {{input type="text" value=model.slug placeholder=model.url_safe_title class="slug"}}
    <button type="submit" class="btn">{{#if model.published}}Save & Publish{{else}}Save Draft{{/if}}</button>
  </div>
  <div class="post-editor">
    {{input type="text" value=model.title placeholder="Title"}}
    {{textarea type="text" value=model.body placeholder=""}}
  </div>
  {{category-select selected_alpha_categories=model.alpha_categories all_categories=all_categories post=model}}
  <div class="post-edit-preview">
    <h1>{{model.title}}</h1>
    <h5>{{#if model.published}}Published: {{#if model.published_date}}{{model.published_date}}{{else}} Publishing... {{/if}},{{else}}Drafted: {{model.inserted_at}}{{/if}} by: {{model.author_name}} - {{model.author_email}}</h5>
    {{{format-markdown model.body}}}
  </div>
</form>
