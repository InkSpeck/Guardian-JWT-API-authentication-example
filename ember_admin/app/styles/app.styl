@import "super-minimal/super-minimal"

// Layout
body, html
  grid()
  height 100%
  & > .ember-view
    height 100%
    &:after
      content ' '
      clear both
      display table
aside
  grid-unit(12%)
  height 100%
  .menu
    grid-unit(100%)
    height 100%
    background #ddd
    li
      grid-unit(100%)
      a
        grid-unit(100%)
        height auto

.alert
  grid-unit(100%)
  padding 1em
  background #ccc
  position fixed
  top 0
  left 0
  z-index 10
  opacity 0.8
  text-align center

.dashboard
  grid-unit(86%)
  padding 1em 2%

.page
  grid-unit(76%)
  height 100%
  #post-edit-form
    grid-unit(100%)
    height 100%
    .post-meta
      grid-unit(100%)
    .post-editor
      grid-unit(33%)
      height 95%
    .post-edit-preview
      grid-unit(66%)
      height 95%


// Styles
@keyframes animate-active-arrow
  0%
    right 0.6em
    opacity 0
  100%
    right 0.4em
    opacity 0.3

aside
  border-right 1px solid #8c8c8c
  .menu
    li
      margin-top 0px
      a
        background linear-gradient(to bottom, 0% #eee, 100% #ededed)
        border-bottom 1px solid #9a9a9a
        padding 1em 1em 1em 1em
        text-decoration none
        color #666
        text-shadow 0px 1px 2px #fff, 0px 0px 2px #ddd
        transition background 80ms ease-in-out
        &.active
          background #333
          color #ccc
          text-shadow none
          cursor default
          border-bottom 1px solid #222
          &:hover
          &:active
            background #333
            color #ccc
            text-shadow none
        &:active
        &:hover
          background #444
          color #eee
          text-shadow none
          border-bottom 1px solid #222
        &:active
        &:hover
        &.active
          font-weight 100
          &:after
            display block
            position absolute
            top 42%
            right 0.4em
            content ''
            width 0
            height 0
            border-style solid
            border-width 4px 0 4px 6px
            border-color transparent transparent transparent #eee
            opacity 0.3
            z-index 3
            animation animate-active-arrow
            animation-duration 160ms
            animation-iteration-count 1
            animation-direction alternate
            animation-timing-function ease-in-out

aside:nth-of-type(1)
  z-index 9
  .menu
    background #aaa

aside:nth-of-type(2)
  z-index 9
  .menu
    background #888

img[alt~="large"]
  max-width 90%
  min-width 600px
  height auto

img[alt~="medium"]
  max-width 65%
  min-width 450px
  height auto

img[alt~="small"]
  max-width 45%
  min-width 300px
  height auto

img[alt~="tiny"]
  max-width 30%
  min-width 150px
  height auto

img[alt~="left"]
  display block
  float left
  margin 1em 1em 1em 0.5em

img[alt~="right"]
  display block
  float right
  margin 1em 0.5em 1em 1em

img[alt~="center"]
  display block
  margin 1em auto 1em auto

#post-edit-form
  input, textarea
    border 1px solid #ccc
    outline none
  input[type="checkbox"]
    float left
    margin 0.6em 0.5em 0.5em 0
  label
    float left
    margin 0.5em 0.5em 0.5em 1em
  textarea
    width 90%
    display block
    height 80%
    margin 1em 3%
    padding 2%
    resize none
  input[type="text"]
    display block
    float left
    width 90%
    height auto
    margin 1em 3%
    padding 2%
    &.slug
      float left
      display block
      width 33%
      height auto
      margin 0.25em 1em 0.25em 0
      padding 0.25em
  .post-meta
    background linear-gradient(to bottom, 0% #eee, 100% #ededed)
    border-bottom 1px solid #9a9a9a
    .edit-info
      float right
      margin 0.7em
      padding 0
      font-size 0.8em
    button
      float right
      background #219331
      color white
      border none
      outline none
      margin 0.3em 0.25em
      padding 0.5em 0.7em
      font-weight 100
      font-size 0.8em
      border-radius 3px
      &.delete
        background #991111
        &:active
        &:hover
          background lighten(#991111, 10%)
      &:active
      &:hover
        background lighten(#219331, 10%)
.user
  grid-unit(100%)
  padding 1em 2%
